{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A collection of ILL policies",
  "type": "object",
  "properties": {
    "illPolicies": {
      "description": "List of ILL policies",
      "id": "illPolicy",
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "illpolicy.json"
      }
    },
    "totalRecords": {
      "description": "Estimated or exact total number of records",
      "type": "integer"
    }
  },
  "required": [
    "illPolicies",
    "totalRecords"
  ]
}
