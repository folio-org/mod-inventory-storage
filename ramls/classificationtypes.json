{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A collection of classification types",
  "type": "object",
  "properties": {
    "classificationTypes": {
      "description": "List of classification types",
      "id": "classificationType",
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "classificationtype.json"
      }
    },
    "totalRecords": {
      "description": "Estimated or exact total number of records",
      "type": "integer"
    }
  },
  "required": [
    "classificationTypes",
    "totalRecords"
  ]
}
